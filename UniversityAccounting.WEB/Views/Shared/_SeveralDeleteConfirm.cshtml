@inject IViewLocalizer _localizer

<div class="modal fade" id="deleteDialog" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">@_localizer["AreYouSure"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="message">
                Message
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-danger w-25" value=@_localizer["Yes"] />
                <button type="button" class="btn btn-primary w-25" data-bs-dismiss="modal">@_localizer["No"]</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#deleteButton').click(function () {
            var checkboxes = $('input[name="ids"]:checked').length;
            document.getElementById("message").innerHTML = "@ViewBag.Message" + checkboxes;
            $('#deleteDialog').modal('toggle');
        });
    });
</script>
    