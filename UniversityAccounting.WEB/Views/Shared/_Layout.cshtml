@inject IViewLocalizer _localizer
@{ bool isRtl = Context.Features.Get<IRequestCultureFeature>().RequestCulture.UICulture.TextInfo.IsRightToLeft; }

<!DOCTYPE html>

<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@_localizer["UniversityAccounting"] - @ViewBag.Title</title>
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" />
    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
        @{ if (isRtl)
            {<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.rtl.min.css" integrity="sha384-LPvXVVAlyPoBSGkX8UddpctDks+1P4HG8MhT7/YwqHtJ40bstjzCqjj+VVVDhsCo" crossorigin="anonymous">} }
        <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/site.min.css" rel="stylesheet" />
        @{ if (isRtl)
            {<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.rtl.min.css" integrity="sha384-LPvXVVAlyPoBSGkX8UddpctDks+1P4HG8MhT7/YwqHtJ40bstjzCqjj+VVVDhsCo" crossorigin="anonymous">} }
        <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    </environment>
    @await RenderSectionAsync("AdditionalMeta", false)
</head>
<body style="height: 760px; direction: @(isRtl ? "rtl" : "ltr")">
    <header>
        <nav class="navbar py-3 navbar-expand-lg navbar-dark bg-primary border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" style="font-size: 1.75rem" asp-area="" asp-controller="Courses" asp-action="Index">@_localizer["UniversityAccounting"]</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active mt-1" style="font-size: larger" aria-current="page" href="#">@_localizer["About"]</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-text ms-auto">
                    <partial name="_SelectLanguagePartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <breadcrumb class="ps-2"></breadcrumb>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="container pb-3">
            &copy; 2021 - UniverWebApp
        </div>
    </footer>
    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
        <script src="~/js/text-trimming.js"></script>
        <script src="~/js/stop-double-submit.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
        <script src="~/js/text-trimming.min.js"></script>
        <script src="~/js/stop-double-submit.min.js"></script>
    </environment>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")
</body>
</html>
