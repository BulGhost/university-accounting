@model Group
@{ ViewBag.Title = "Delete group";}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="row">
            <h2 class="text-info ps-3">Delete group</h2>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row m-3">
            <div class="col-8">
                <div class="row m-3">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-4">
                        <label asp-for="FormationDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FormationDate" disabled class="form-control" type="date" />
                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}