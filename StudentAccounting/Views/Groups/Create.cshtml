@model Group
@{ ViewBag.Title = "Create group";}

<form method="post" asp-action="Create">
    <input asp-for="CourseId" hidden />
    <input asp-for="FormationDate" hidden />
    <div class="border p-3">
        <div class="row">
            <h2 class="text-info ps-3">Add group</h2>
        </div>
        <div class="row m-3">
            <div class="col-8">
                <div class="row m-3">
                    <div class="col-4">
                        <label asp-for="Name" class="required"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row m-3">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}